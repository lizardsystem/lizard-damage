<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
  <Folder>
    <name>Lizard Schademodule</name>
    <description>Lizard Schademodule resultaat {{ view.damage_event }} (beschikbaar tot {{ view.damage_event.scenario.expiration_date|date:"d-m-y" }})
    </description>
    {% for damage_event_result in view.damage_event.damageeventresult_set.all %}
    <GroundOverlay>
      <name>{{ damage_event_result.image.name }}</name>
      <description>{{ damage_event_result.image.name }}</description>
      <Icon>
        <href>{{ view.root_url }}{{ damage_event_result.image.url }}</href>
      </Icon>
      <LatLonBox>
        <north>{{ damage_event_result.north }}</north>
        <south>{{ damage_event_result.south }}</south>
        <east>{{ damage_event_result.east }}</east>
        <west>{{ damage_event_result.west }}</west>
        <rotation>{{ damage_event_result.rotation }}</rotation>
      </LatLonBox>
    </GroundOverlay>
    {% endfor %}
    <ScreenOverlay>
      <name>Legenda</name>
      <visibility>0</visibility>
      <Icon>
        <href>{{ view.root_url }}{{ STATIC_URL }}lizard_damage/legend.png</href>
      </Icon>
      <overlayXY x="1" y="-1" xunits="fraction" yunits="fraction"/>
      <screenXY x="1" y="0" xunits="fraction" yunits="fraction"/>
      <rotationXY x="0" y="0" xunits="fraction" yunits="fraction"/>
      <size x="0" y="0" xunits="fraction" yunits="fraction"/>
    </ScreenOverlay>
  </Folder>
</kml>
